<h1>Listing contents</h1>

<table>
  <tr>
    <th>Created At</th>
    <th><%= t('Title') %></th>
    <th>&nbsp;</th>
    <th>&nbsp;</th>
    <th>&nbsp;</th>
  </tr>

<% @contents.each do |content| %>
  <tr>
    <td><%=h content.created_at %></td>
    <td><%=h content.title %></td>
    <td><%= link_to t('Show'), content %></td>
    <td><%= link_to t('Edit'), edit_content_path(content) %></td>
    <td><%= link_to t('Destroy'), content, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New content', new_content_path %>